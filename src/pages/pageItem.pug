                                        img(srcset='/public/img/img--product.jpg 1x, /public/img/img--product@2x.jpg 2x' alt='Баннер')

                                .swiper-slide
                                    picture
                                        source(type='image/webp' srcset='/public/img/img--product.webp 1x, /public/img/img--product@2x.webp 2x')
                                        source(type='image/jpg' srcset='/public/img/img--product.jpg 1x, /public/img/img--product@2x.jpg 2x')
