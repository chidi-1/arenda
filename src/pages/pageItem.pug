                .categories.categories-white
                    +category('/public/img/img--category-1', 'jpg', 'Палатки', '9 видов')
                    +category('/public/img/img--category-2', 'jpg', 'Спальники', '5 видов')
                    +category('/public/img/img--category-3', 'jpg', 'Рюкзаки', '5 видов')
                    +category('/public/img/img--category-4', 'jpg', 'Кемпинговая мебель', '6 видов')
